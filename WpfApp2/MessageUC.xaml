<UserControl x:Class="WpfApp2.MessageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             mc:Ignorable="d" 
              Background="Transparent"
             Height="25" Width="150"
             Margin="5"
      
             
           >

    <Border BorderThickness="0" BorderBrush="MediumAquamarine" CornerRadius="10" Background="MediumAquamarine" >
        <Grid>
            <Viewbox>
                <TextBlock Name="textBlock" Height="100"  TextAlignment="Right" FontSize="48" Text="{Binding MessageText}" 
                           TextWrapping="Wrap" Width="500">

                </TextBlock>

            </Viewbox>
        </Grid>
    </Border>
</UserControl>
